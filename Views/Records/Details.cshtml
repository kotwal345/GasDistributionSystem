@model CentralizedDatabaseManagementSystem.Models.Distributor

@{
    ViewData["Title"] = "Distributor Details";
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Distributor Details</h2>
    <table class="table table-bordered table-striped">
        <tr>
            <th>Distributor Code</th>
            <td>@Model.DistributorCode</td>
        </tr>
        <tr>
            <th>Distributor Name</th>
            <td>@Model.DistributorName</td>
        </tr>
        <tr>
            <th>Owner Name</th>
            <td>@Model.OwnerName</td>
        </tr>
        <tr>
            <th>KYC Updated</th>
            <td>@Model.KYCUpdated</td>
        </tr>
        <tr>
            <th>Commissioning Date</th>
            <td>@Model.CommissioningDate.ToShortDateString()</td>
        </tr>
        <tr>
            <th>Agreement Valid From</th>
            <td>@Model.AgreementValidFrom.ToShortDateString()</td>
        </tr>
        <tr>
            <th>Agreement Valid Upto</th>
            <td>@Model.AgreementValidUpto.ToShortDateString()</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th>City</th>
            <td>@Model.City</td>
        </tr>
        <tr>
            <th>State</th>
            <td>@Model.State</td>
        </tr>
        <tr>
            <th>Pin</th>
            <td>@Model.Pin</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>@Model.Phone</td>
        </tr>
        <tr>
            <th>Mobile</th>
            <td>@Model.Mobile</td>
        </tr>
        <tr>
            <th>Emergency Contact</th>
            <td>@Model.EmergencyContact</td>
        </tr>
        <tr>
            <th>Insurance Expiry Date</th>
            <td>@Model.InsuranceExpiryDate?.ToShortDateString()</td>
        </tr>
        <tr>
            <th>GSTIN</th>
            <td>@Model.GSTIN</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>PNG Operators Available</th>
            <td>@Model.PNGOperatorsAvailable</td>
        </tr>
        <tr>
            <th>PNG Firm Name</th>
            <td>@Model.PNGFirmName</td>
        </tr>
        <tr>
            <th>Transporter</th>
            <td>@Model.Transporter</td>
        </tr>
        <tr>
            <th>No. of Vehicles</th>
            <td>@Model.NoOfVehicles</td>
        </tr>
    </table>

    <div class="text-center mt-3">
        <a href="@Url.Action("Index", "Records")" class="btn btn-secondary">Back to List</a>
    </div>
</div>
