@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Centralized Distributor & Consumer Management System - Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background: #f5f5f5;
        }
        .login-container {
            margin-top: 50px;
        }
        .login-card {
            padding: 20px;
            border-radius: 10px;
            background-color: #fff;
            box-shadow: 0px 0px 10px 0px #aaa;
        }
        .login-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #003366;
            text-align: center;
        }
        .form-control {
            margin-bottom: 15px;
        }
        .login-btn {
            width: 100%;
            background-color: #003366;
            color: white;
        }
        .small-text {
            font-size: 12px;
            color: #888;
            text-align: center;
            margin-top: 10px;
        }
        .logo-img {
            width: 120px;
            display: block;
            margin: 0 auto 20px;
        }
    </style>
</head>
<body>
    <div class="container login-container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-card">
                    @* <img src="~/images/hpcl_logo.png" alt="HPCL Logo" class="logo-img" /> *@
                    <div class="login-title">Centralized Distributor & Consumer Management System</div>

                    <form asp-controller="Account" asp-action="Login" method="post">


                        <div class="form-group">
                            <label>Email Address</label>
                            <input type="email" class="form-control" name="Email" placeholder="Enter Email" required />
                        </div>

                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="Password" placeholder="Enter Password" required />
                        </div>

                        <button type="submit" class="btn login-btn">Sign In</button>

                        
                    </form>

                </div>
            </div>
        </div>
    </div>
</body>
</html>
