@model CentralizedDatabaseManagementSystem.Models.Distributor

@{
    ViewData["Title"] = "Create Distributor";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

    <style>
        body {
            background: linear-gradient(to right, #f8f9fa, #eaeaea);
            font-family: 'Segoe UI', sans-serif;
        }

        .form-container {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-top: 40px;
        }

        .form-title {
            font-size: 26px;
            font-weight: bold;
            text-align: center;
            color: #d40000;
            margin-bottom: 30px;
        }

        .form-group label {
            font-weight: 500;
        }

        .form-control:focus {
            border-color: #d40000;
            box-shadow: 0 0 0 0.2rem rgba(212, 0, 0, 0.25);
        }

        .header-text {
            font-size: 28px;
            font-weight: bold;
            color: #d40000;
        }

        .sub-header {
            font-size: 18px;
            font-weight: 500;
        }

        .tooltip-inner {
            background-color: #343a40;
            color: #fff;
        }

        .form-section {
            margin-bottom: 25px;
        }

        .text-danger {
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row mt-4 mb-3">
            <div class="col-md-12 d-flex justify-content-between align-items-center">
                <div class="header-text"></div>
                <div class="sub-header">
                    Profile &nbsp;&nbsp;<a asp-action="Login" class="btn btn-danger">Log Out</a>
                </div>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <div class="form-container">
            <div class="form-title">Distributor Information</div>

            <form asp-action="Create" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-row form-section">
                    <div class="form-group col-md-6">
                        <label>Distributor Code</label>
                        <input asp-for="DistributorCode" class="form-control" />
                        <span asp-validation-for="DistributorCode" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label>Distributor Name</label>
                        <input asp-for="DistributorName" class="form-control" />
                        <span asp-validation-for="DistributorName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row form-section">
                    <div class="form-group col-md-6">
                        <label>Owner Name</label>
                        <input asp-for="OwnerName" class="form-control" />
                        <span asp-validation-for="OwnerName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label>Date of Commissioning</label>
                        <input asp-for="CommissioningDate" type="date" class="form-control" />
                        <span asp-validation-for="CommissioningDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row form-section">
                    <div class="form-group col-md-6">
                        <label>Agreement Valid From</label>
                        <input asp-for="AgreementValidFrom" type="date" class="form-control" />
                        <span asp-validation-for="AgreementValidFrom" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label>Agreement Valid Upto</label>
                        <input asp-for="AgreementValidUpto" type="date" class="form-control" />
                        <span asp-validation-for="AgreementValidUpto" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row form-section">
                    <div class="form-group col-md-12">
                        <label>Address</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row form-section">
                    <div class="form-group col-md-4">
                        <label>City</label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label>State</label>
                        <input asp-for="State" class="form-control" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label>Pin</label>
                        <input asp-for="Pin" class="form-control" />
                        <span asp-validation-for="Pin" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row form-section">
                    <div class="form-group col-md-4">
                        <label>Phone</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label>Mobile</label>
                        <input asp-for="Mobile" class="form-control" />
                        <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label>Emergency Contact</label>
                        <input asp-for="EmergencyContact" class="form-control" />
                        <span asp-validation-for="EmergencyContact" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row form-section">
                    <div class="form-group col-md-4">
                        <label>GSTIN</label>
                        <input asp-for="GSTIN" class="form-control" />
                        <span asp-validation-for="GSTIN" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label>Email</label>
                        <input asp-for="Email" type="email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label>No. of Vehicles</label>
                        <input asp-for="NoOfVehicles" type="number" class="form-control" />
                        <span asp-validation-for="NoOfVehicles" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-info ml-2">View Records</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
