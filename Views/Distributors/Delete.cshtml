@model CentralizedDatabaseManagementSystem.Models.Distributor

@{
    ViewData["Title"] = "Delete Distributor";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-danger">Delete Distributor</h2>

        <h5>Are you sure you want to delete this distributor?</h5>
        <hr />
        <div class="mb-3">
            <p><strong>Distributor Code:</strong> @Model.DistributorCode</p>
            <p><strong>Distributor Name:</strong> @Model.DistributorName</p>
            <p><strong>Owner Name:</strong> @Model.OwnerName</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <!-- Add more fields as needed -->
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>
