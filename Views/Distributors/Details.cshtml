@model CentralizedDatabaseManagementSystem.Models.Distributor

@{
    ViewData["Title"] = "Distributor Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <h2>Distributor Details</h2>

        <div>
            <strong>Distributor Code:</strong> @Model.DistributorCode <br />
            <strong>Distributor Name:</strong> @Model.DistributorName <br />
            <strong>Owner Name:</strong> @Model.OwnerName <br />
            <strong>Dealer KYC Updated:</strong> @Model.KYCUpdated <br />
            <strong>Date of Commissioning:</strong> @Model.CommissioningDate <br />
            <strong>Dealership Agreement Valid From:</strong> @Model.AgreementValidFrom <br />
            <strong>Dealership Agreement Valid Upto:</strong> @Model.AgreementValidUpto <br />
            <strong>Distributor Address:</strong> @Model.Address <br />
            <strong>Town / City:</strong> @Model.City <br />
            <strong>State:</strong> @Model.State <br />
            <strong>Pin:</strong> @Model.Pin <br />
            <strong>Phone No:</strong> @Model.Phone <br />
            <strong>Mobile:</strong> @Model.Mobile <br />
            <strong>Emergency Contact No:</strong> @Model.EmergencyContact <br />
            <strong>Insurance Expiry Date:</strong> @Model.InsuranceExpiryDate <br />
            <strong>GSTIN:</strong> @Model.GSTIN <br />
            <strong>Email:</strong> @Model.Email <br />
            <strong>PNG Operators Available:</strong> @Model.PNGOperatorsAvailable <br />
            <strong>PNG Firm Name:</strong> @Model.PNGFirmName <br />
            <strong>Transporter (Plant):</strong> @Model.Transporter <br />
            <strong>No. of Vehicles (Plant):</strong> @Model.NoOfVehicles <br />
        </div>

        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </div>
</body>
</html>
